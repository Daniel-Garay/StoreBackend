generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["mongoDb"]
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL") 
}

model User {
  id        String   @id @default(dbgenerated()) @map("_id") @db.ObjectId
  Name      String   
  Email     String
  balance   Int
}

model Product {
  id        String   @id @default(dbgenerated()) @map("_id") @db.ObjectId
  Description      String   
  Price   Int
  Sku     String
}

model PurchaseOrder {
  id        String   @id @default(dbgenerated()) @map("_id") @db.ObjectId
  UserId      String   
  CreationDate DateTime @default(now())
  TotalPrice   Int
}

model PurchaseOrderItems {
  id        String   @id @default(dbgenerated()) @map("_id") @db.ObjectId
  PurchaseOrderId      String   
  ProductId            String
  Quantity   Int
  Total   Int
}

